{
  "author": "Cedric Gilissen",
  "version": "0.1.0",
  "description": "Write compelling emails with your personal AI writing assistant. Create touching emails, context-specific replies and summarize emails in seconds.",
  "manifest_version": 3,
  "name": "Meet Wonka",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/logo-popup.png"
      ],
      "matches": [
        "https://mail.google.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "images/logo-popup.png",
      "24": "images/logo-popup.png",
      "32": "images/logo-popup.png"
    },
    "default_popup": "index.html"
  },
  "icons": {
    "16": "images/logo-popup.png",
    "32": "images/logo-popup.png",
    "48": "images/logo-popup.png",
    "128": "images/logo-popup.png"
  }
}